#include <iostream>
#include <string>
#include <vector>

class Student
{
    public:
    std::string imie;
    float srednia;
    Student(std::vector<int> tab0,std::string b)
    {
        float suma=0;
        for(int i=0;i<tab0.size();i++)
        {
            suma=suma + tab0[i];
        }
        imie = b;
        srednia=(suma/tab0.size());
    }
    
};


float get_best_student(std::vector<Student> a)
{   
    float naj = 0;
    
    for(int i=0;i<a.size();i++)
    {
        
        if(a[i].srednia >= naj)
        {
            naj = a[i].srednia;
        }
    }
    
    return naj;
}


int main()
{	
    std::vector<Student> x;
    
    std::vector<int> tab1 = {4,3,5};
    std::vector<int> tab2 = {1,2,5};
    std::vector<int> tab3 = {1,3,3};
    
	Student ob1(tab1, "Konrad");
	Student ob2(tab2, "Janusz");
	Student ob3(tab3, "Dawidek");
	
	x.push_back(ob1);
	x.push_back(ob2);
	x.push_back(ob3);
	
	
	
	
	
	std::cout << "Najlepsza srednia to: " << get_best_student(x) << "\n";
	
	
	
	return 0;
}
